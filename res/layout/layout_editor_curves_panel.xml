<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center" >
    <LinearLayout
        android:id="@+id/curves_btn_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
         >
		<RelativeLayout
            android:id="@+id/curve_btn_rgb"
            android:layout_width="@dimen/photoeditor_tab_card_width"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_gravity="center_horizontal"
             >

            <ImageView
                android:id="@+id/rgb_icon_iv"
                android:layout_width="@dimen/photoeditor_tab_card_icon_width"
                android:layout_height="@dimen/photoeditor_tab_card_icon_height"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/photoeditor_tab_card_icon_margintop"
                android:background="#ffffff"
                android:clickable="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rgb_icon_iv"
                style="@style/filter_show_main_tab_text"
                android:text="RGB" />
        </RelativeLayout>
        
		<RelativeLayout
            android:id="@+id/curve_btn_red"
            android:layout_width="@dimen/photoeditor_tab_card_width"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_gravity="center_horizontal"
             >

            <ImageView
                android:id="@+id/red_icon_iv"
                android:layout_width="@dimen/photoeditor_tab_card_icon_width"
                android:layout_height="@dimen/photoeditor_tab_card_icon_height"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/photoeditor_tab_card_icon_margintop"
                android:background="@color/red"
                android:clickable="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/red_icon_iv"
                style="@style/filter_show_main_tab_text"
                android:text="红色" />
        </RelativeLayout>

		<RelativeLayout
            android:id="@+id/curve_btn_green"
            android:layout_width="@dimen/photoeditor_tab_card_width"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_gravity="center_horizontal"
             >

            <ImageView
                android:id="@+id/green_icon_iv"
                android:layout_width="@dimen/photoeditor_tab_card_icon_width"
                android:layout_height="@dimen/photoeditor_tab_card_icon_height"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/photoeditor_tab_card_icon_margintop"
                android:background="@color/green"
                android:clickable="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/green_icon_iv"
                style="@style/filter_show_main_tab_text"
                android:text="绿色" />
        </RelativeLayout>
        
		<RelativeLayout
            android:id="@+id/curve_btn_blue"
            android:layout_width="@dimen/photoeditor_tab_card_width"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_gravity="center_horizontal"
             >

            <ImageView
                android:id="@+id/blue_icon_iv"
                android:layout_width="@dimen/photoeditor_tab_card_icon_width"
                android:layout_height="@dimen/photoeditor_tab_card_icon_height"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/photoeditor_tab_card_icon_margintop"
                android:background="@color/blue"
                android:clickable="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/blue_icon_iv"
                style="@style/filter_show_main_tab_text"
                android:text="蓝色" />
        </RelativeLayout>



    </LinearLayout>

</LinearLayout>
